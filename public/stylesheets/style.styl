/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #faf9f0
background-color = #fd2a39

body
  font-family 'Tahoma'
  background-color background-color
  color #faf9f0




ul
  list-style none
  margin-top 50px
  width 340px
  float left

  li
   font-family 'Quicksand'
   padding-top 20px
   padding-right 2px
   padding-bottom 40px
   font-size 21px
   background-color background-color

   a
    text-decoration none
    padding-left 10px
    color #fff
   a:hover
     background-color #fd2a39
     font-size 25px
     font-weight bold	
     color #0ac969
 
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color

header
   font-family 'Quicksand'
   padding 30px 10px 50px
   background-color #ffffff
   color #fd2a39
   font-size 25px
   text-align center
 .container
    float right
    width 700px
    margin-top 50px
    margin-right 30px
    overflow hidden

 .main-content
    font-family 'Quicksand'
    font-size 21px
    width 300px
    margin-top 20px
    margin-bottom 50px
    text-align center 
    float left
   p   
    margin-bottom 20px

  .sidebar
   float right
   width 250px 
   font-family 'Quicksand'
   font-size 21px
   margin 20px
   padding-top 10px
   padding-left 20px
   .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 10px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)
    a
      text-decoration none
      color white
     a:hover
      font-size 15px
      font-weight bold	
      color #0ac969

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-radius 2px 2px 0px 0px
      margin-bottom 10px
      text-align center

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 1280px
  margin auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
  float:left
